<!--pages/search_list/index.wxml-->
<view class="search">
  <view class="search_input">
    <icon type="search" size="16"></icon>
    小米
  </view>
</view>

<!-- tab栏 -->
<view class="tab">
  <view wx:for="{{['综合','销量','价格']}}" wx:key="{{index}}"
  bindtap="handleChange" data-index="{{index}}" class="tab-item">
      {{item}}
  </view>
</view>


<!-- 商品列表 -->
<view class="goods-list">
  <!-- 单个商品 -->
  <navigator url="" class="goods-item">
    <image></image>

    <view class="goods-right">
      <view class="goods-title">
      </view>
      <view class="goods-price"></view>
    </view>
  </navigator>
</view>
/* pages/goods_detail/index.wxss */
/* 宝贝详情页面样式 */
/* 轮播图 */
.goods-swiper{
  height: 750rpx;
}
.slide-image{
  width: 750rpx;
  height: 750rpx;
}
/* 宝贝标题和收藏 */
.goods_price{
  padding:10rpx;
  font-size: 18px;
  color: red;
}
.goods_info{
  display: flex; 
  padding: 10rpx;
  justify-content: space-between;

}
.goods_title{
  border-right: 1px solid #eee;
  box-sizing: border-box;
  padding: 0 10rpx;
  flex:1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;/*显示几行*/
  overflow: hidden;
}
.goods_star{
  width:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color:#666;
}
.goods_express{
  padding:30rpx 20rpx;
  color: #666;
  font-size: 14px;
}

/* 底部导航栏 */
.footer-bar{
  width:100%;
  height:100rpx;
  position: fixed;
  bottom:0;
  left:0;
  background:#fff;
  z-index: 99;

  display: flex;
}

.footer-bar-left{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color:#666;
}

.footer-bar-left text{
  font-size:12px;
}

.footer-button{
  width:30%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size:14px;
  color:#fff;
  background: orange;
}

.footer-button:last-child{
  background: red;
}

.contact{
  position:absolute;
  left:0; top:0;
  width:20%;
  height:100rpx;
  overflow: hidden;
  opacity: 0;
}

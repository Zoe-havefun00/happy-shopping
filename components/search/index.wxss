/* 顶部搜索栏 */
.search{
   padding:20rpx;
   background: #ff2d4a;
   position: fixed;
   top:0;
   left:0;
   width: 100%;
   box-sizing: border-box;
   z-index:99;
}
.search-input{
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items:center;
  /* line-height: 60rpx; */
  /* text-align: center; */
  background:#fff;
  border-radius:4rpx;
  font-size: 14px;
  color:#fff;
}
.search-input icon{
  margin-right:10px;
}